{
  "connectorName": "googlespreadsheet",
  "operationName": "updateCell",
  "title": "Update Cell",
  "help": "<h1>Update Cell</h1><b>Edit the content of a single cell.</b><br><br>",
  "elements": [
    {
      "type": "attributeGroup",
      "value": {
        "groupName": "General",
        "elements": [
          {
            "type": "attribute",
            "value": {
              "name": "configRef",
              "displayName": "Connection",
              "inputType": "connection",
              "allowedConnectionTypes": [
                "GOOGLESPREADSHEET"
              ],
              "defaultType": "connection.GOOGLESPREADSHEET",
              "required": "true",
              "helpTip": "Connection to be used"
            }
          },
          {
            "type": "attribute",
            "value": {
              "name": "spreadsheetId",
              "displayName": "Spreadsheet ID",
              "inputType": "stringOrExpression",
              "required": "true",
              "helpTip": "Unique identifier of the spreadsheet"
            }
          },
          {
            "type": "attribute",
            "value": {
              "name": "range",
              "displayName": "Range",
              "inputType": "stringOrExpression",
              "required": "true",
              "helpTip": "The A1 notation of the cell to update (e.g. 'Sheet1!A1')"
            }
          }
        ]
      }
    },
    {
      "type": "attributeGroup",
      "value": {
        "groupName": "Update Options",
        "elements": [
          {
            "type": "attribute",
            "value": {
              "name": "valueInputOption",
              "displayName": "Value Input Option",
              "inputType": "combo",
              "comboValues": ["RAW", "USER_ENTERED"],
              "defaultValue": "RAW",
              "required": "true",
              "helpTip": "How the input data should be interpreted. RAW: Values will not be parsed. USER_ENTERED: Values will be parsed as if the user typed them into the UI"
            }
          },
          {
            "type": "attribute",
            "value": {
              "name": "values",
              "displayName": "Values",
              "inputType": "stringOrExpression",
              "required": "true",
              "helpTip": "The new values to write to the cell. Should be an array of arrays, e.g. [['new value']]"
            }
          },
          {
            "type": "attribute",
            "value": {
              "name": "majorDimension",
              "displayName": "Major Dimension",
              "inputType": "combo",
              "comboValues": ["ROWS", "COLUMNS"],
              "defaultValue": "ROWS",
              "required": "false",
              "helpTip": "The major dimension that results should use"
            }
          }
        ]
      }
    },
    {
      "type": "attributeGroup",
      "value": {
        "groupName": "Output",
        "elements": [
          {
            "type": "attribute",
            "value": {
              "name": "responseVariable",
              "displayName": "Output Variable Name", 
              "inputType": "string",
              "deriveResponseVariable": "true",
              "required": "true",
              "helpTip": "Name of the variable to which the output of the operation should be assigned"
            }
          },
          {
            "type": "attribute",
            "value": {
              "name": "overwriteBody",
              "displayName": "Overwrite Message Body",
              "inputType": "checkbox", 
              "defaultValue": "false",
              "helpTip": "Replace the Message Body in Message Context with the output of the operation (This will remove the payload from the above variable).",
              "required": "false"
            }
          }
        ]
      }
    }
  ]
}